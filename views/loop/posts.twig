{% if posts|length > 0 %}
<div class="flex flex-col">
  {% for post in posts %}
  <a
    href="{{ post.path }}"
    class="group mb-4 flex flex-col sm:flex-row rounded overflow-hidden border"
  >
    {% if post.thumbnail %}
    <img
      class="w-full sm:w-1/3 max-h-[200px] object-top object-cover"
      src="{{ post.thumbnail.src('med_thumb') }}"
    />
    {% endif %}
    <div
      class="flex sm:w-2/3 flex-col flex-grow justify-between px-2 py-3 sm:p-4"
    >
      <div class="mb-2">
        <h3
          class="text-rose-900 leading-tight font-semibold group-hover:underline"
        >
          {{ post.title }}
        </h3>
        <p class="text-xs italic mt-1 text-gray-700 mb-2">
          Escrito em <strong>{{ post.post_date | date }}</strong> por
          <strong>{{ post.author.name }}</strong>
        </p>
        <p class="text-gray-600 text-sm">
          {{ post.post_content|excerpt(40) }}
        </p>
      </div>
      <p
        class="mt-2 text-xs text-right text-rose-900 group-hover:underline self-end"
      >
        Ver mais...
      </p>
    </div>
  </a>
  {% endfor %}
</div>
{% endif %}
