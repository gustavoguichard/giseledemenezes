{% if posts|length > 0 %}
<div
  class="flex flex-col mb-4 {% if not with_title %}border-t-4 pt-6{% endif %}"
>
  {% if with_title %}
  <h3
    class="text-2xl font-semibold text-gray-600 border-t-2 pt-3 pb-2 my-4 border-b-2"
  >
    Depoimentos
  </h3>
  {% endif %} {% for item in posts %}
  <div class="mb-6 border-b last:border-none pb-3">
    <div class="prose lg:prose-lg prose-rose">
      <blockquote>
        {{ item.content }}
      </blockquote>
      <p class="text-right leading-tight text-gray-600 text-sm font-semibold">
        {{ item.title }}
        {% if item.profissao %}
        <br />{{ item.profissao }}
        {%endif %}
      </p>
    </div>
  </div>
  {% endfor %}
</div>
{% endif %}
