<div class="flex flex-wrap border-t-4 pt-6 mb-4">
  {% for item in posts %}
    <div class="flex items-stretch w-full sm:w-1/2 lg:w-1/3 p-2">
      <a href="{{ item.path }}" class="group flex flex-col rounded overflow-hidden border">
        <img class="w-full h-32 object-top object-cover" src="{{ item.thumbnail.src }}" />
        <div class="flex flex-col flex-grow justify-between py-3 px-2">
          <div class="mb-2">
            <h3 class="text-rose-900 leading-tight font-semibold mb-2 group-hover:underline">{{ item.title }}</h3>
            <p class="text-gray-600 text-sm">{{ item.post_content|excerpt(25) }}</p>
          </div>
          <p class="mt-2 text-xs text-right text-rose-900 group-hover:underline self-end">Ver mais...</p>
        </div>
      </a>
    </div>
  {% endfor %}
</div>
